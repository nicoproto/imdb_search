<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <% # Form  %>
      <%= form_tag movies_path, class: 'my-4', method: :get do %>
        <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a movie" %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>

      <% # List of movies  %>
      <div id="movies">
        <% @movies.each do |movie| %>
          <h4><%= movie.title %></h4>
          <p><%= movie.syllabus %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
